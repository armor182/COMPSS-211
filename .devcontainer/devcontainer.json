{
  "name": "COMPSS-211 devcontainer",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installJupyterlab": true
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        // Set the root for notebooks so VS Code doesn't create .virtual_documents
        "jupyter.notebookFileRoot": "/workspaces/COMPSS-211"
      }
    }
  }
}